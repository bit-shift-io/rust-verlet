{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rust-verlet'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust-verlet",
                    "--package=rust-verlet"
                ],
                "filter": {
                    "name": "rust-verlet",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "DYLD_FALLBACK_LIBRARY_PATH": "${userHome}/.rustup/toolchains/stable-x86_64-apple-darwin/lib",
                "CARGO_MANIFEST_DIR": "${workspaceFolder}"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rust-verlet'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rust-verlet",
                    "--package=rust-verlet"
                ],
                "filter": {
                    "name": "rust-verlet",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}